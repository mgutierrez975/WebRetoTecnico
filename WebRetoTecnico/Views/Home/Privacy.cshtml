<div class="row justify-content-center">

    <div class="col-10">

        <div class="alert alert-info" role="alert">
            Crud Sede Olimpica
        </div>
        <button type="button" class="btn btn-success btn-sm boton-nuevo-sedeolimpica">Crear Nuevo</button>

        <table class="table table-striped" id="tablaSedeOlimpica">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Numero Complejo</th>
                    <th>Presupuesto Aproximado</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>

    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modalSedeOlimpica" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal Sede Olimpica</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <div class="mb-3">
                    <label class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="txtNombre" autocomplete="off">
                </div>

                <div class="mb-3">
                    <label class="form-label">NumeroComplejo</label>
                    <input type="text" class="form-control" id="txtNumeroComplejo" autocomplete="off">
                </div>

                <div class="mb-3">
                    <label class="form-label">Presupuesto Aproximado</label>
                    <input type="text" class="form-control" id="txtPresupuestoAproximado">
                </div>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary boton-guardar-cambios-sedeolimpica">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts
    {

    <script src="~/js/sedeolimpica.js"></script>
}